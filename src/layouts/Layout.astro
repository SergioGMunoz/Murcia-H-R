---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Descubre los mejores hoteles y restaurantes de la RegiÃ³n de Murcia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #b88e2f;
		--secondary: #f4f5f7;
		--grey: #8c8c8c;
		--border-radius: 0.5rem;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: "Poppins", sans-serif;
	}

	body {
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 2rem;
		min-height: 100vh;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: "Montserrat", sans-serif;
		font-weight: bold;
		margin: 0;
		padding: 0;
	}

	p {
		margin: 0;
		padding: 0;
		font-family: "Poppins", sans-serif;
		font-weight: normal;
	}

	main {
		display: flex;
		flex-direction: column;
		margin: 0 6rem;
		flex-grow: 1;
		gap: 2rem;
	}

	@media (max-width: 768px) {
		main {
			margin: 0 2rem;
		}
	}

	@media (max-width: 480px) {
		main {
			margin: 0 1rem;
		}
	}
</style>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
