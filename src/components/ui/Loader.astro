<div class="loader-container">
  <div class="spinner"></div>
</div>

<style>
.loader-container {
  display: flex;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
  min-height: 300px;
}

.spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(184, 142, 47, 0.2);
  border-top: 4px solid #B88E2F;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
</style>
