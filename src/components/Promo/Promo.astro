---
import Carousel from "./Carousel";
import notImg from "../../assets/img/not-img.png";

interface Props {
  item: any;
}

const { item } = Astro.props;

const photosToArray = (itemData: any) => {
  if (!itemData) {
    return [notImg.src];
  }

  const photos: string[] = [];

  Object.keys(itemData).forEach(key => {
    if (key.match(/^Foto \d+$/)) {
      const photoUrl = itemData[key];
      if (photoUrl && photoUrl.trim() !== "") {
        photos.push(photoUrl.trim());
      }
    }
  });

  if (photos.length <= 0) return [notImg.src];
  return photos;
};

const photos = photosToArray(item);
const name = item?.['Nombre'] || '';
const url = item?.["URL Real"] || item?.["URL Corta"] || "";
---

<section>
  <Carousel client:load name={name} url={url} photos={photos} />
</section>

<style is:global>
.carousel-container {
  position: relative;
  height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: var(--border-radius);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.carousel-img {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  z-index: 1;
}

.carousel-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.carousel-content {
  position: relative;
  z-index: 3;
  text-align: center;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rem;
  padding: 2rem;
}

.carousel-container h1 {
  color: white;
  text-shadow: 1px 1px 2px rgb(0, 0, 0, 0.5);
}

.navigation-icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);  
  color: white !important;
  width: 3rem;
  height: 3rem;
  cursor: pointer;
  z-index: 4;
  transition: all 0.5s ease;
}

.navigation-icon:hover {
  transform: translateY(-50%) scale(1.3);
  color: var(--primary) !important;
}

.navigation-icon.prev {
  left: 1rem;
}

.navigation-icon.next {
  right: 1rem;
}

@media (max-width: 768px) {
  .carousel-container {
    height: 300px;
  }
  
  .carousel-container h1 {
    font-size: 1.8rem;
  }
  
  .navigation-icon {
    width: 2rem;
    height: 2rem;
    padding: 0.3rem;
  }
  
  .navigation-icon.prev {
    left: 0.5rem;
  }
  
  .navigation-icon.next {
    right: 0.5rem;
  }
  
  .carousel-content {
    padding: 1rem;
    gap: 1rem;
  }
  
  .carousel-container .primary-button {
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .carousel-container {
    height: 250px;
  }
  
  .carousel-container h1 {
    font-size: 1.4rem;
  }
  
  .carousel-container .primary-button {
    padding: 0.7rem 1.2rem;
    font-size: 0.9rem;
  }
}
</style>
